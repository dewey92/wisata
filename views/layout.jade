doctype html
html
	head
		title My app

		// Viewport mobile tag for sensible mobile support
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1")
		link(rel="stylesheet", type="text/css", href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.4/united/bootstrap.min.css")
		link(rel="stylesheet", type="text/css", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")
		link(rel="stylesheet", type="text/css", href="/css/style.css")

		block styles

	body
		header
			nav(role="navigation").navbar.navbar-inverse.navbar-fixed-top
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(type="button", data-toggle="collapse" data-target="#kolaps")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href="/") Travey

					.collapse.navbar-collapse#kolaps
						form.navbar-form.navbar-left(action='http://localhost:3000/city/', method='get', role='search')
							.form-group
								label.sr-only(for='cityName') Search city
								.input-group
									input.form-control#cityName(type='text', name='cityName', placeholder='Type destination city..')
									.input-group-btn
										input.btn.btn-default(type='submit', value='Search')

						ul.nav.navbar-nav
							li.active
								a(href="#") Home
							li
								a(href="#") Tour
							li
								a(href="#") Blog
						ul.nav.navbar-nav.navbar-right
							li
								a(href="#login-modal", data-toggle='modal') User

		block body

		if (user == null)
			#login-modal.modal.fade
				.modal-dialog
					.modal-content
						.modal-header
							button.close(type='button', data-dismiss='modal')
								span(aria-hidden='true') &times;
								span.sr-only Close
							h4.modal-title Login
						.modal-body
							ul.list-inline
								li
									a.btn.btn-block.btn-social.btn-google-plus(href='/auth/google/')
										i.fa.fa-google-plus
										| Google
								li
									a.btn.btn-block.btn-social.btn-twitter(href='/auth/twitter/')
										i.fa.fa-twitter
										| Twitter
								li
									a.btn.btn-block.btn-social.btn-facebook(href='/auth/facebook/')
										i.fa.fa-facebook
										| Facebook
							hr
							#form-login
						.modal-footer
							button.btn.btn-default(type='button', data-dismiss='modal') Close
							button.btn.btn-primary(type='button') Save changes